<!-- Log in form -->
<div class="container mt-10rem">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center">Forms</h2>
      <form>
        <div class="form-group">
          <%= label_tag :email %><br />
          <%= email_field_tag :email, "", autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :password %><br />
          <%= password_field_tag :password, "", autocomplete: "current-password", class:"form-control" %>
        </div>

        <div class="btn-group btn-group-toggle form-group" data-toggle="buttons">
          <label class="btn btn-outline-primary">
            <input type="checkbox" autocomplete="off"> Remember me
          </label>
        </div>
        <div class="actions mt-5">
          <%= submit_tag "Connect", class:"btn btn-primary btn-block"  %>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- end -->
