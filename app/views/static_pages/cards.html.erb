<h1 class="text-center">Event's index</h1>

<!-- Cards index -->
<div class="container d-flex justify-content-center mt-3">
  <div class="card mb-4 box-shadow box-shadow-hover border-primary">
    <div class="card-header">
      <p>"Title"</p>
    </div>
    <div class="card-body">
      <p class="card-text">Description</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "See more", "#", class:"btn btn-sm btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end -->

<h1 class="text-center mt-3">Cities index</h1>

<!-- City card -->
<div class="container d-flex justify-content-center mt-3">
  <div class="card w-50">
    <div class="card-body">
      <h5 class="card-title">City name</h5>
      <p class="card-text">#number of events</p>
      <a href="#" class="btn btn-outline-primary">See events</a>
    </div>
  </div>
</div>
<!-- end -->

<h1 class="text-center mt-3">Cards index</h1>

<!-- Cards show -->
<div class="album py-5">
  <div class="container">
    <div class="card-columns">
      <% 6.times do %>
        <div class="card mb-4 box-shadow box-shadow-hover border-primary">
          <div class="card-body">
            <p class="card-text"><%= "Title " %></p>
            <p class="card-text"><%= "Description and more " %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to "See more", "#", class:"btn btn-sm btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- end -->
<h1 class="text-center mt-3">Event users</h1>

<!-- Event user show -->
<div class="container">
  <div class="my-3 p-3 bg-shadow rounded box-shadow">
    <h6 class="border-bottom border-gray pb-2 mb-0">Users</h6>
